{
    "version": 2,
    "functions": {
      "api/index.php": {
        "runtime": "vercel-php@0.8.0"
      }
    },
    "routes": [
      {
        "src": "/(.*)",
        "dest": "/api/index.php"
      }
    ],
    "build": {
      "env": {
        "APP_ENV": "production",
        "APP_DEBUG": "false",
        "APP_URL": "https://yourprojectdomain.com"
      },
      "commands": [
        "php bin/composer.phar install",
        "npm install",
        "npm run build"
      ]
    }
  }
